@model TaskManagementSystem.Core.ViewModel.TaskerViewModel

@{
    ViewData["Title"] = "Delete Task";
}

<h2>Delete Task</h2>

<div>
    <p>Are you sure you want to delete the following task?</p>
    <dl class="row">
        <dt class="col-sm-2">Title:</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Description:</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Completed:</dt>
        <dd class="col-sm-10">@Model.IsCompleted</dd>
    </dl>
    <form asp-controller="Tasker" asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Tasker" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

</div>
